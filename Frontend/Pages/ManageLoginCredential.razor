            <h3>Hello, @context.User.Identity.Name</h3>
            <h4>Email: @userEmail</h4>
        }
        else
        {
            <p>User not authenticated</p>
        }
     *@
         
    </Authorized>
</AuthorizeView>



@code {
    private string CurrentPassword { get; set; }
    private string NewPassword { get; set; }
    private string RepeatNewPassword { get; set; }
    
    public string message;

    public string errorMessage;

    public int userIdFromCache { get; set; }
    
    [Parameter] public string Id { get; set; }
    public async Task ChangeCredential()
    {
        userIdFromCache = await authManager.GetUserIdFromCache();
        // If Id is null, then it gets assigned the value "1".
        Id = Id ?? "1";
        try
        {
            
            if (CurrentPassword != null || NewPassword != null || RepeatNewPassword != null)
            {

                string response = await iCredentialService.ChangePassword(userIdFromCache ,CurrentPassword, NewPassword, RepeatNewPassword);

                errorMessage = response;

            }
            else
            {
                errorMessage = "Please make sure of correct password are correct.";
            }
          
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

}